<% layout("./layouts/layout.eta") %>

<h1>Shared shopping lists</h1>
<h2><a href="/lists">Lists</a></h2>

<h2>Statistics</h2>
<% if(it.lists < 1) { %>
    No shopping lists yet.
<% } else { %>
    <ul>
        <li>
            Shopping lists: <%= it.lists %>
        </li>
        <li>
            Shopping list items: <%= it.items %>
        </li>
    </ul>
<% } %>